# Environment Variables Template
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Database URLs
DATABASE_URL_PRODUCTS=postgresql://postgres:postgres123@localhost:5432/products_db
DATABASE_URL_USERS=postgresql://postgres:postgres123@localhost:5433/users_db
DATABASE_URL_ORDERS=postgresql://postgres:postgres123@localhost:5434/orders_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Service Ports
PORT_GATEWAY=4000
PORT_PRODUCTS=4001
PORT_USERS=4002
PORT_ORDERS=4003
PORT_PAYMENTS=4004
PORT_FRONTEND=3000

# Service URLs (for Gateway)
PRODUCTS_SERVICE_URL=http://localhost:4001/graphql
USERS_SERVICE_URL=http://localhost:4002/graphql
ORDERS_SERVICE_URL=http://localhost:4003/graphql
PAYMENTS_SERVICE_URL=http://localhost:4004/graphql

# Frontend
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_API_URL=http://localhost:4000

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=ecommerce-assets
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# AWS RDS (for production)
RDS_PRODUCTS_ENDPOINT=your-products-db.rds.amazonaws.com
RDS_USERS_ENDPOINT=your-users-db.rds.amazonaws.com
RDS_ORDERS_ENDPOINT=your-orders-db.rds.amazonaws.com

# AWS ElastiCache Redis (for production)
ELASTICACHE_ENDPOINT=your-redis-cluster.cache.amazonaws.com:6379

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Service (SendGrid/SES)
EMAIL_FROM=noreply@yourdomain.com
SENDGRID_API_KEY=your_sendgrid_api_key

# CORS
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-min-32-chars
