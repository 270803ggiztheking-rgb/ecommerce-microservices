{
    "name": "@ecommerce/products-service",
    "version": "1.0.0",
    "description": "Products microservice with GraphQL and Redis caching",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "migrate": "typeorm migration:run",
        "migrate:revert": "typeorm migration:revert"
    },
    "dependencies": {
        "@apollo/server": "^4.9.5",
        "@apollo/subgraph": "^2.6.0",
        "express": "^4.18.2",
        "graphql": "^16.8.1",
        "graphql-tag": "^2.12.6",
        "ioredis": "^5.3.2",
        "pg": "^8.11.3",
        "typeorm": "^0.3.17",
        "zod": "^3.22.4",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.10",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.2"
    }
}